<Project>
  <PropertyGroup>
    <!-- Common NuGet Package Properties -->
    <Authors>Adam Paquette</Authors>
    <Company>AppStackOne</Company>
    <Copyright>Copyright Â© 2026</Copyright>
    <PackageProjectUrl>https://github.com/adampaquette/Zircon</PackageProjectUrl>
    <RepositoryUrl>https://github.com/adampaquette/Zircon</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    
    <!-- Build Properties -->
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <NoWarn>$(NoWarn);CS1591</NoWarn> <!-- Suppress missing XML comment warnings for now -->
    
    <!-- Package Icon (optional - only set if file exists) -->
    
    <!-- Versioning - Single version for all packages -->
    <!-- Override with -p:Version=x.y.z during CI/CD -->
    <Version>2.0.0</Version>
    <AssemblyVersion>$(Version).0</AssemblyVersion>
    <FileVersion>$(Version).0</FileVersion>
  </PropertyGroup>
  
  <!-- Include Package Icon if it exists -->
  <ItemGroup Condition="Exists('$(MSBuildProjectDirectory)\icon.png')">
    <None Include="$(MSBuildProjectDirectory)\icon.png" Pack="true" PackagePath="\" />
  </ItemGroup>
</Project>